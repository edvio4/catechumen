.top-bar.normal{ role: "navigation" }
  .top-bar-left.menu-text= link_to 'Catechumen', students_path

  / Right Nav Section
  #reponsive-menu
    .top-bar-right
      - if user_signed_in?
        %ul.menu
          %li= link_to  "Signed in as #{current_user.first_name}", "users/#{current_user.id}", { id: "#{current_user.id}", class: "username" }
          %li= link_to 'Sign Out', destroy_user_session_path, method: :delete
      - else
        %ul.menu
          %li= link_to 'Sign In', new_user_session_path
          %li.active= link_to 'Sign Up', new_user_registration_path
